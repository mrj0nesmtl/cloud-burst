        "auth": "/api/auth",
        "events": "/api/events",
        "photos": "/api/photos",
        "users": "/api/users"
      },
      "middleware": "src/middleware.ts"
    },
    "supabase": {
      "client": {
        "location": "src/lib/supabase.ts",
        "types": "src/types/supabase.ts"
      },
